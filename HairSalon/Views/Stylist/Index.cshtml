@{Layout = "_Layout";}

@using HairSalon.Models;

<h1>Your Stylists</h1>

@if(Model.Count == 0)
{
  <p>You currently have no Stylists in your Database.</p>
  <p>Click the Add Stylist button in the navbar to add a new Stylist.</p>
}

@foreach(Stylist stylist in Model)
{
  <p>@Html.ActionLink(stylist.Name, "Details", new {id = stylist.Id}, new {@class = "btn btn-warning"})</p>
}