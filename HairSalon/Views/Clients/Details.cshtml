@{Layout = "_Layout";}

@model HairSalon.Models.Client

<h1>@Model.Name's Recorded info</h1>

<p>@Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)</p>

@Html.ActionLink("Back to Stylist", "Details", "Stylists", new {id = @Model.StylistId},  new { @class = "btn btn-dark btn-large" }) 
@Html.ActionLink("Edit this Client", "Edit", null, new {id = @Model.ClientId},  new { @class = "btn btn-dark btn-large" }) 
@Html.ActionLink("Remove this Client", "Delete", null, new {id = @Model.ClientId},  new { @class = "btn btn-dark btn-large" }) 
